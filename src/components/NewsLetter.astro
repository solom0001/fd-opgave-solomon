---
import LinkButton from "./LinkButton.astro";
import { Image } from "astro:assets";
import PATTERN from "@assets/images/Pattern.png";
---

<article>
  <div class="grid1_1-1">
    <Image src={PATTERN} alt="gold star pattern" class="pattern" />
    <div>
      <h2>Subscribe To Our Newsletter</h2>
      <p>Build stronger Customer Relationships with Consultalk</p>
    </div>

    <div class="inputDiv">
      <input type="text" name="nsInput" id="nsInput" placeholder="your mail adress" />
      <LinkButton color="yellow" link="#" title="Subscribe" />
    </div>
  </div>
</article>

<style>
  article {
    grid-column: 1/-1;
    display: grid;
    grid-template-columns: 1fr minmax(0, 1200px) 1fr;

    > * {
      grid-column: 2;
    }

    .grid1_1-1 {
      display: grid;
      grid-template-columns: 1fr 0.75fr;
      gap: 50px;
      background-color: var(--primary-dark);
      color: var(--secondary-white);
      padding: 4.5rem;
      border-radius: 15px;
      overflow: hidden;
      position: relative;
      z-index: 0;
    }

    .inputDiv {
      display: flex;
      align-items: center;
      z-index: 2;
      gap: 20px;
      position: relative;

      &::after {
        content: "";
        width: 150px;
        aspect-ratio: 1/1;
        position: absolute;
        bottom: -161px;
        right: -114px;
        border-radius: 15px;
        transform: rotate(40deg);
        background-color: var(--primary-green);
      }
    }

    #nsInput {
      background-color: var(--secondary-grey);
      color: var(--gray-400);
      flex: 2;
      border-radius: 5px;
      padding: 1rem;
      height: 45px;
    }

    .pattern {
      position: absolute;
      z-index: 1;
      top: -25px;
      right: -48px;
      width: 241px;
      height: 132px;
      transform: rotate(45deg);
    }
  }
</style>
