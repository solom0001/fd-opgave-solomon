---
import Services from "./Services.astro";
import { Image } from "astro:assets";
import DynamicIcon from "./helpers/DynamicIcon.astro";
import PATTERN from "@assets/images/Pattern.png";
import TEAMPHOTOImage from "@assets/images/teamPhoto.jpg";
import LADYSEAT from "@assets/images/ladyInSeat.png";
import Checkmark from "@icons/checkmark.svg";

const { img1 = null, img2 = null, img3 = null } = Astro.props;
---

<div class="case-wrapper">
  <Image src={PATTERN} alt="gold star pattern" class="pattern" />
  <div class="case">
    {
      img1 && (
        <div>
          <Image src={img1} alt="Case image 1" />
        </div>
      )
    }

    {
      img2 && (
        <div>
          <Image src={img2} alt="Case image 2" />
        </div>
      )
    }

    {
      img3 && (
        <div>
          <Image src={img3} alt="Case image 3" />
        </div>
      )
    }
  </div>
  <style>
    .case-wrapper {
      max-width: 600px;
      height: 400px;
      position: relative;
      z-index: 0;
      display: flex;
    }

    .case {
      max-width: 100%;
      min-height: 100%;
      /* aspect-ratio: 2/1; */
      display: grid;
      grid-template-columns: 0.5fr 3fr;
      grid-template-rows: 0.5fr 3fr;
      position: absolute;
      bottom: 0;
      right: 0;
      z-index: 1;

      img {
        border-radius: 15px;
        object-fit: cover;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
      }

      :nth-child(1) {
        grid-column: 2/-1;
        grid-row: 2/-1;
      }
    }
    .case:has(:nth-child(2)) {
      grid-template-columns: none;
      max-width: 85%;
      aspect-ratio: 1/0.75;
      right: auto;
      left: 0;
      grid-template-areas:
        "a a b b"
        "a a c c";
      gap: 15px;

      :nth-child(1) {
        grid-area: b;
      }
      :nth-child(2) {
        grid-area: a;
      }
      :nth-child(3) {
        grid-area: c;
      }

      /* .pattern {
      left: auto;
      right: 0;
    } */
    }

    .pattern {
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      width: 300px;
      aspect-ratio: 1/1;
    }
    .case-wrapper > :nth-child(2):has(:nth-child(2)) {
      .pattern {
        left: auto;
        right: -5;
      }
    }
  </style>
</div>
