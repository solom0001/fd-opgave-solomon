---
//@ts-nocheck
import servicesData from "@data/services.json";
import LinkButton from "./LinkButton.astro";
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <LinkButton color="black" title={service.buttonText} link="#0" />
        {/* <a href="#0">{service.buttonText}</a> */}
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      padding: 0;
      gap: 10px;
    }
    li {
      display: grid;
      grid-template-rows: subgrid;
      /* max-width: 350px; */
      min-width: 370px;
      align-self: center;
      grid-row: span 3;
      background-color: rgba(24, 24, 24, 0.747);
      backdrop-filter: blur(6px);
      color: var(--secondary-white);
      border-radius: 1rem;
      padding: 2rlh;
    }
  }
</style>
